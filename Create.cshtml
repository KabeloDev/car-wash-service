<style>
    .carousel-item {
        padding: 30px; /* Add padding for better spacing */
        background-color: #e9ecef; /* Light grey background for contrast */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #dc3545; /* Red background for controls */
        border-radius: 50%; /* Circular controls */
    }

        .carousel-control-prev-icon:hover,
        .carousel-control-next-icon:hover {
            background-color: #c82333; /* Darker red on hover */
        }

    strong {
        display: block; /* Stack member name below review */
        margin-top: 10px; /* Spacing between review and name */
        font-size: 1.1em; /* Slightly larger font for names */
        color: #343a40; /* Darker text color for names */
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function selectBitmoji(bitmojiFileName) {
            document.getElementById('selectedBitmoji').value = bitmojiFileName;
            // Optional: Highlight the selected Bitmoji (You can enhance this as needed)
            const options = document.querySelectorAll('.bitmoji-option');
            options.forEach(option => {
                option.style.border = ''; // Reset border
            });
            const selectedOption = Array.from(options).find(option => option.querySelector('img').src.includes(bitmojiFileName));
            selectedOption.style.border = '2px solid #dc3545'; // Highlight selected
        }
    </script>
}
