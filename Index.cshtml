<script>
    // JavaScript function to add a service to a package
    function addToPackage(serviceId) {

        fetch(`/Packages/AddItem?serviceId=${serviceId}`, {
            method: 'POST',
        })
        .then(response => {
            if (response.ok) {
                alert("Service added to package successfully!");
            } else {
                alert("Failed to add service to package.");
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>

